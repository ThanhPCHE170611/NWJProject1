<Window x:Class="NWJProject1.Views.UpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NWJProject1.Views"
        mc:Ignorable="d"
        xmlns:userfomrcs="clr-namespace:NWJProject1.Views.UserControls"
        Title="UpdateUser" Height="450" Width="750" Background="#333333" 
        Name="updateWindow" WindowStyle="ToolWindow">
    <Grid>
        <userfomrcs:UserFormUC ButtonContent="Update" ButtonCommand="{Binding UpdateUserCommand}" ButtonCommandParameter="{Binding ElementName=updateWindow}" IsEditMode="True"/>

    </Grid>
</Window>
