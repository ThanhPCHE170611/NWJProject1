<Window x:Class="NWJProject1.Views.UserHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NWJProject1.Views"
        mc:Ignorable="d"
        Title="UserHomePage" Height="650" Width="1000">
    <Grid Background="#333333">
        <Grid Background="Transparent" Grid.Row="1" Margin="25,40,25,15">
            <TextBox Name="FilterTextBox" TextChanged="FilterTextBox_TextChanged" Height="30" Width="200" Margin="25" VerticalAlignment="Top"  HorizontalAlignment="left" BorderThickness="1" BorderBrush="#E0E0E0" FontSize="16"/>
            <Button Height="30" Command="{Binding ShowWindowCommand}" Content="Add User" Width="100"  VerticalContentAlignment="Center" Padding="5" Margin="25" VerticalAlignment="Top" HorizontalAlignment="Right" BorderThickness="1" BorderBrush="#E0E0E0" />
            <ListView Name="UserList" ItemsSource="{Binding Users}" BorderBrush="#cdcdcd" Margin="25,70,25,25" Padding="0" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="UserID"  DisplayMemberBinding="{Binding UserId}" />
                        <GridViewColumn Header="FullName"   DisplayMemberBinding="{Binding FullName}"/>
                        <GridViewColumn Header="Gender"  Width="100" DisplayMemberBinding="{Binding Gender}"/>
                        <GridViewColumn Header="Address"  Width="100" DisplayMemberBinding="{Binding Address}"/>
                        <GridViewColumn Header="PhoneNumber"  Width="100" DisplayMemberBinding="{Binding PhoneNumber}"/>
                        <GridViewColumn Header="Status"  Width="100" DisplayMemberBinding="{Binding Status}"/>
                        <GridViewColumn Header="Group"  Width="100" DisplayMemberBinding="{Binding GroupId}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
